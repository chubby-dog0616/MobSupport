<Window x:Class="MobSupport.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobSupport"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:MobSupport.ViewModel"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MobSupport" Height="500" Width="960" Name="Window"
        Background="#F5F5F5">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- 左側エリア -->
        <StackPanel Grid.Column="0" Cursor=""  Margin="10, 0, 5, 0">
            <!-- タイマー -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,50" Background="Black">
                <TextBox Name="TimerTextBox" FontSize="100" FontFamily="{StaticResource Digital}" Foreground="White"
                         Text="{Binding TimerDisplay.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsTimerEidtable.Value, Mode=OneWay}" 
                         TextAlignment="Center" Margin="10,0,5,0" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="LostFocus">
                            <i:InvokeCommandAction Command="{Binding SetTimer}" CommandParameter="{Binding Text, ElementName=TimerTextBox}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <Button
                        Height="45" Margin="0,10,10,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        BorderBrush="White"
                        ToolTip="タイマーの開始/停止"
                        Command="{Binding StartTimer}">
                        <materialDesign:PackIcon Kind="{Binding StartOrStopButtonIcon.Value, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Width="30" Height="30" Foreground="White"/>
                    </Button>

                    <Button
                        Height="45"  Margin="0,10,10,0"

                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        BorderBrush="White"
                        ToolTip="タイマーのリセット"
                        Command="{Binding ResetTimer}">
                        <materialDesign:PackIcon Kind="Restart" Width="32" Height="32" Foreground="White" Cursor=""/>
                    </Button>
                </StackPanel>
                
            </StackPanel>

            <!-- 名前入力 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center" IsEnabled="{Binding IsMemberEditable.Value}">
                <materialDesign:PackIcon Kind="Account" Margin="0,0,10,0" Width="30" Height="30" VerticalAlignment="Bottom" Foreground="#0097A7"/>

                <TextBox
                    Margin="0,0,20,0" FontSize="18"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="メンバーを入力してください"
                    AcceptsReturn="True"
                    Style="{StaticResource  MaterialDesignFloatingHintTextBox}"
                    MinWidth="250"
                    TextWrapping="Wrap" 
                    BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
                    Text="{Binding MemberName.Value, Mode=TwoWay}"/>
                <Button
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                    ToolTip="メンバーを追加します"
                    Command="{Binding AddMember}" Padding="5">
                    <materialDesign:PackIcon Kind="Plus" Width="24" Height="24" />
                </Button>
                <Button
                    Margin="10,0,10,0"
                    Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                    ToolTip="メンバーをリセットします"
                    Command="{Binding ResetMember}" Padding="5">
                    <materialDesign:PackIcon Kind="Autorenew" Width="24" Height="24" />
                </Button>
                <Button
                    Margin="10,0,0,0"
                    Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                    ToolTip="役割をシャッフルします"
                    Command="{Binding ShuffleRole}" Padding="5">
                    <materialDesign:PackIcon Kind="Shuffle" Width="24" Height="24" />
                </Button>

            </StackPanel>

            <!-- 名前リスト -->
            <Border Padding="10" Margin="0,0,0,10" >
                <ListBox ItemsSource="{Binding Members}" IsEnabled="{Binding IsMemberEditable.Value}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        
                        <DataTemplate>
                            <materialDesign:Chip
                                Content="{Binding Name.Value}"
                                DeleteToolTip="Your friendly neighbor delete button"
                                IsDeletable="True"
                                ToolTip="Just a tool tip"
                                VerticalAlignment="Top" >
                                <materialDesign:Chip.Icon>
                                    <Image Source="{Binding IconPath.Value}"/>
                                </materialDesign:Chip.Icon>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="DeleteClick">
                                        <i:InvokeCommandAction Command="{Binding DataContext.RemoveMember, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding Id}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </materialDesign:Chip>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </StackPanel>

        <!-- 右側エリア -->
        <Grid Grid.Column="1" Margin="5, 0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>
            <!-- ナビゲーター -->
            <GroupBox BorderThickness="0" Grid.Row="0" Grid.Column="0" Margin="0,0,5,0">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Images/navigator.png" Height="25"/>
                        <TextBlock Text="ナビゲーター" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </GroupBox.Header>
                <StackPanel  VerticalAlignment="Center">
                    <Image Source="{Binding Rotator.Value.Navigator.Value.IconPath.Value}" Width="80" Height="80" />
                    <TextBlock Text="{Binding Rotator.Value.Navigator.Value.Name.Value}" TextAlignment="Center" FontSize="18"/>
                </StackPanel>
            </GroupBox>
                <!-- タイピスト -->
            <GroupBox BorderThickness="0" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Images/typist.png" Height="25"/>
                        <TextBlock Text="タイピスト" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                </GroupBox.Header>
                <StackPanel VerticalAlignment="Center">
                    <Image Source="{Binding Rotator.Value.Typist.Value.IconPath.Value}" Width="80" Height="80" />
                    <TextBlock Text="{Binding Rotator.Value.Typist.Value.Name.Value}" TextAlignment="Center" FontSize="18"/>
                </StackPanel>
            </GroupBox>
            <!-- モブ -->
            <GroupBox BorderThickness="0" Grid.Row="1" Grid.ColumnSpan="2">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Images/mobs.png" Height="25"/>
                        <TextBlock Text="その他のモブ" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </GroupBox.Header>
                <ItemsControl ItemsSource="{Binding Rotator.Value.Mobs}" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="80" Margin="10,0,10,0">
                                <Image Source="{Binding IconPath.Value}" Width="80" Height="80" />
                                <TextBlock Text="{Binding Name.Value}" TextAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
